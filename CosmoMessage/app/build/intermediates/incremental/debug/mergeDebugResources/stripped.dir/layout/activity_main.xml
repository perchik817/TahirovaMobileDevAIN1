<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18sp"
    android:background="@drawable/cosmoman"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ast"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Write cosmo message ;)"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="26sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/b1"
        android:layout_width="280sp"
        android:layout_height="60sp"
        android:layout_below="@id/ast"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="254dp"
        android:background="@color/white"
        android:text="Message"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/white"
    app:backgroundTint="@color/black"
    app:cornerRadius="20sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/b1"
        android:layout_marginTop="22dp"
        android:background="#72CA7A7A"
        android:backgroundTint="#E40000"
        android:visibility="invisible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/b2"
        android:layout_width="180sp"
        android:layout_height="80sp"
        android:layout_below="@id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Send to ast"
        android:textAlignment="center"
        android:visibility="invisible"
        app:backgroundTint="#C1F57F17"
        app:cornerRadius="20sp" />

</RelativeLayout>
