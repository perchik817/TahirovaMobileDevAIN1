<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.payment.PaymentFragment"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="29dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/baseline_keyboard_backspace_24"
        android:contentDescription="Back"
        tools:ignore="TouchTargetSizeCheck" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:text="Payments ways:"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/visaMastercard"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/smoke_white"
        app:cardCornerRadius="26dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/vizza_large"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/paypal"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/smoke_white"
        app:cardCornerRadius="26dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/paypal"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMbank"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/smoke_white"
        app:cardCornerRadius="26dp">
        <ImageView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="80dp"
            android:src="@drawable/mbank"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/o"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/smoke_white"
        app:cardCornerRadius="26dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/o"/>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFinallyPay"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        app:cornerRadius="26dp"
        android:backgroundTint="@color/dark_blue"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:text="pay"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gray"/>
</LinearLayout>