<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/blueSky"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/blue_sky"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/badWeatherSky"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/bad_weather_sky"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/nightSky"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/night_sky"
        android:visibility="invisible"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sunLotty"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="170dp"
        android:layout_above="@+id/cardView"
        android:layout_alignParentTop="true"
        android:src="@raw/sun"
        android:visibility="visible"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rainLotty"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="170dp"
        android:layout_above="@+id/cardView"
        android:layout_alignParentTop="true"
        android:src="@raw/rain2"
        android:visibility="visible"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/snowLotty"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="170dp"
        android:layout_above="@+id/cardView"
        android:layout_alignParentTop="true"
        android:src="@raw/snow2"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/layoutBuilds"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/blueSky"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-220dp"
        android:src="@drawable/buildings" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blueSky"
        android:layout_marginTop="-20dp"
        android:padding="10dp"
        app:cardCornerRadius="26dp">

        <TextView
            android:id="@+id/localTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/GardensC_03_1"
            android:textColor="@color/midnight_blue"/>

        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/deep_sky_blue"
            android:fontFamily="@font/GardensC_03_1"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:text="Name of City"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="20%"
                    android:textAlignment="center"
                    android:textColor="@color/dodger_blue"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="Humidity"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="1mBar"
                    android:textAlignment="center"
                    android:textColor="@color/cerulean_blue"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="Pressure"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="5 m/s"
                    android:textAlignment="center"
                    android:textColor="@color/dodger_blue"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="Wind"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:background="@color/azure">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="It is sunny"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/isRaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="It is raining"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tempC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/GardensC_03_1"
                android:text="17°C"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tempMaxMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/GardensC_03_1"
                android:text="17°C↑\n11°C↓"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingStart="22dp"
            android:layout_marginTop="200dp">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sunrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="5:05 AM"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="Sunrise"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sunset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="8:17 PM"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="Sunset"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cloud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="50%"
                    android:textAlignment="center"
                    android:textColor="@color/corn_flower_blue"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/GardensC_03_1"
                    android:text="Cloud"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/time_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="60dp"
            android:text="timezone"
            android:fontFamily="@font/GardensC_03_1"
            android:textColor="@color/deep_sky_blue"
            android:visibility="visible" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:translationZ="90dp">

        <RelativeLayout
            android:id="@+id/slideUpBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/deep_sky_blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="8dp"
                android:text="Slide up"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/GardensC_03_1"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <EditText
                android:id="@+id/inputCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter city's name:"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/GardensC_03_1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show me"
                android:background="@color/dodger_blue"
                android:fontFamily="@font/GardensC_03_1"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>